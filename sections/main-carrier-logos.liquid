<div class="carrier-logos-container page-width">

  {% for block in section.blocks %}
    <div class="carrier-logo">
      <img src="{{block.settings.logos |  img_url: '170x48'}}">
    </div>
  {% endfor %}
  
</div>

{% schema %}
  {
    "name": "Carrier Logos",
    "blocks": [
      {        
		"type": "image_picker",
        "name": "Carrier Logos",
        "settings": [
          {
            "id": "logos",
            "type": "image_picker",
            "label": "Pick an image"
          }
		]
      }
    ],
    "presets": [
      {
        "name": "Carrier Logos",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
	.carrier-logos-container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(190px, 1fr));
	}
	.carrier-logo {
		display: grid;
		align-self: center;
		place-self: center;
	}

	@media screen and (min-width: 600px) {
      
    }
{% endstylesheet %}

